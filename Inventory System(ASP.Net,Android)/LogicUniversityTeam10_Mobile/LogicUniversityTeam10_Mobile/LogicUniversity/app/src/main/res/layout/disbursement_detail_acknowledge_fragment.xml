<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_staff_requisition_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.logicuniversity.Activity.DepartmentHeadMainActivity">
  <TextView
      android:id="@+id/text1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/itemName"

      android:textAppearance="@style/TextAppearance.AppCompat.Button"
      android:layout_marginTop="10dp"
      android:layout_alignParentTop="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true" />

  <Button
      android:text="Acknowledge"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/btnAck"
      android:layout_marginTop="87dp"
      android:layout_marginLeft="21dp"
      android:layout_marginStart="21dp"
      android:layout_alignTop="@+id/txtRemk"
      android:layout_toRightOf="@+id/text1"
      style="@style/Widget.AppCompat.Button.Colored" />

  <EditText
      android:id="@+id/editRemark"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"

      android:layout_alignBottom="@+id/txtRemk"
      android:layout_alignLeft="@+id/btnAck"
      android:layout_alignStart="@+id/btnAck" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="20dp"
      android:id="@+id/txtRemk"
      android:text="Remark"
      android:layout_gravity="left"
      android:textAlignment="center"
      android:layout_marginTop="167dp"
      android:layout_below="@+id/text1" />

  <android.support.v7.widget.RecyclerView
      android:id="@+id/rel_items"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_below="@+id/text1"
      android:layout_alignRight="@+id/text3"
      android:layout_alignEnd="@+id/text3" />

  <TextView
      android:id="@+id/text3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Actual"

      android:textAppearance="@style/TextAppearance.AppCompat.Button"
      android:layout_above="@+id/rel_items"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true"
      android:layout_marginRight="10dp"
      android:layout_marginEnd="10dp" />

  <TextView
    android:id="@+id/text2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Needed"

    android:textAppearance="@style/TextAppearance.AppCompat.Button"
      android:layout_above="@+id/rel_items"
      android:layout_toLeftOf="@+id/text3"
      android:layout_toStartOf="@+id/text3"
      android:layout_marginRight="53dp"
      android:layout_marginEnd="53dp" />
</RelativeLayout>