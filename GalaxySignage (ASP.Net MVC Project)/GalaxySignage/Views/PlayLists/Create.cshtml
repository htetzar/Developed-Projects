@model GalaxySignage.Models.Playlist

@{
    ViewBag.Title = "CreatePlayList";
}

<h2>CreatePlayList</h2>
@section scripts{
<script src="@Url.Content("~/Scripts/chosen.jquery.js")" type="text/javascript"></script>
@Styles.Render("~/Content/chosen")
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/jqueryval")    
    <style type="text/css">
        .chosen-container-multi .chosen-choices li.search-field input[type="text"] {
            height: 25px;
        }
    </style> 
    <script>
        $(function () {
            $('.chosen-select').chosen({
                no_results_text: "Your's movie, nothing found!",
                placeholder_text_multiple: "Select Movie Lists",
                search_contains: true,
                disable_search: true
            });
        });
    </script>

}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Playlist</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="row">
            <div class="form-group col-xs-6 col-md-2">
                @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
            </div>
            <div class="form-group col-md-4">
                @Html.EditorFor(model => model.Name)
            </div>
            <div class="form-group col-md-4">
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>
        <br />
        <div class="row">
            <div class="form-group col-xs-6 col-md-2">
                @*<b>Video</b>*@
                @Html.LabelFor(model => model.Videos, new { @class = "control-label col-md-2", })
            </div>
            <div class="form-group col-md-4">
                @Html.DropDownList("Videos", (IEnumerable<SelectListItem>)ViewBag.Videos, new { @class = "chosen-select", style = "width:200px", multiple = true })
            </div>
            <div class="form-group col-md-4">
                @Html.ValidationMessageFor(model => model.Videos)
            </div>
        </div>
            <br />
        <div class="row">
            <div class="col-md-offset-2 col-xs-1">
                <input type="submit" value="Create" class="btn btn-default"/>
            </div>
        </div>

    </div>
}

<div class="row col-xs-6 col-md-3">
    @Html.ActionLink("Back to List", "Index")
</div>



